@model SmartGrocery.DTOs.ShopingListCreateDTO

@{
    ViewData["Title"] = "Create Shopping List";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">🛒 Create Shopping List</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-4">
            <label asp-for="Name" class="form-label fw-semibold">List Name</label>
            <input asp-for="Name" class="form-control form-control-lg shadow-sm rounded-3" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <h5 class="mb-3">Items</h5>
        <div id="product-container">
            <div class="row align-items-center mb-3 product-item p-3 bg-light rounded-3 shadow-sm">
                <div class="col-8">
                    <select name="SelectedProducts[0].ProductId" class="form-select">
                        <option value="">-- Choose a product --</option>
                        @foreach (var p in Model.AvailableProducts)
                        {
                            <option value="@p.Id">@p.Name</option>
                        }
                    </select>
                </div>
                <div class="col-4">
                    <input type="number" name="SelectedProducts[0].Quantity" class="form-control" min="1" value="1" />
                </div>
            </div>
        </div>

        <button type="button" id="add-product" class="btn btn-outline-secondary mb-4">+ Add another item</button>

        <div class="d-grid">
            <input type="submit" value="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm" />
        </div>
    </form>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">← Back to Lists</a>
    </div>
</div>

@section Scripts {
    <script>
        let productIndex = 1;

        document.getElementById("add-product").addEventListener("click", function () {
            const container = document.getElementById("product-container");
            const newItem = container.firstElementChild.cloneNode(true);

            newItem.querySelector("select").name = `SelectedProducts[${productIndex}].ProductId`;
            newItem.querySelector("input").name = `SelectedProducts[${productIndex}].Quantity`;

            newItem.querySelector("select").value = "";
            newItem.querySelector("input").value = "1";

            container.appendChild(newItem);
            productIndex++;
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
