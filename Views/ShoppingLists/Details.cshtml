@model SmartGrocery.Models.ShoppingList

@{
    ViewData["Title"] = "Shopping List Details";
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">🛒 @Model.Name</h2>

    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="text-center py-5 bg-light rounded-3 shadow-sm">
            <i class="bi bi-basket text-secondary" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3">This shopping list is currently empty.</p>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill px-4 shadow-sm">
                ➕ Add Items
            </a>
        </div>
    }
    else
    {
        <div id="product-list" class="mt-4">
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                var item = Model.Items.ElementAt(i);
                var productName = item?.Product?.Name ?? $"❓ Unknown (ID: {item?.ProductId})";

                <div class="row align-items-center mb-3 product-row p-3 bg-light rounded-3 shadow-sm">
                    <div class="col-md-6">
                        <div class="fw-semibold text-dark">@productName</div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-control-plaintext">@item.Quantity</div>
                    </div>
                    <div class="col-md-3 text-end">
                        <span class="badge bg-secondary px-3 py-2 shadow-sm">@(i + 1)</span>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-5 d-flex justify-content-between align-items-center">
        <div>
            <a asp-controller="AI" asp-action="Index" class="btn btn-danger rounded-pill px-4 shadow-sm">
                💡 Ask AI for Recipe Ideas
            </a>
        </div>
        <div class="text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill px-4 shadow-sm me-2">
                ✏️ Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 me-2">
                ← Back
            </a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this list?');">
                <button type="submit" class="btn btn-outline-danger rounded-pill px-4 shadow-sm">
                    🗑 Delete
                </button>
            </form>
        </div>
    </div>
</div>
