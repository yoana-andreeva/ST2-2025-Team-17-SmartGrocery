@model SmartGrocery.Models.Product

@{
    ViewData["Title"] = "Delete a product";
}

<h2 class="mt-4 mb-3 text-center text-danger">@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <p>Are you sure that you want to delete this? <strong>@Model.Name</strong>?</p>
</div>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Quantity:</dt>
        <dd class="col-sm-9">@Model.Quantity</dd>

        <dt class="col-sm-3">Unit:</dt>
        <dd class="col-sm-9">@Model.Unit</dd>

        <dt class="col-sm-3">Price:</dt>
        <dd class="col-sm-9">@Model.Price</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

</div>
