    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 hover-card">
                <div class="card-body text-center">
                    <i class="bi bi-list-check text-warning" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Your Shopping List</h5>
                    <p class="text-muted small">Organize what you need in one place.</p>
                    <a href="/ShoppingLists" class="btn btn-outline-warning mt-2">View Lists</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 hover-card">
                <div class="card-body text-center">
                    <i class="bi bi-lightbulb-fill text-danger" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">AI Assistant</h5>
                    <p class="text-muted small">Get smart recipe suggestions instantly.</p>
                    <a href="/AI" class="btn btn-outline-danger mt-2">Ask AI</a>
                </div>
            </div>
        </div>
    </div>


    <div class="mt-5"> @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <a asp-controller="ShoppingLists" asp-action="Index" class="btn btn-lg btn-success shadow-sm px-4"> <i class="bi bi-list-check"></i> Go to Your Shopping List </a>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-primary shadow-sm px-4"> <i class="bi bi-person-plus-fill"></i> Get Registration Now </a>
        } 
    </div>
</div>

@section Scripts {
    <script>
        // Small animation effect on hover
        document.querySelectorAll('.hover-card').forEach(card => {
            card.addEventListener('mouseenter', () => card.classList.add('shadow-lg'));
            card.addEventListener('mouseleave', () => card.classList.remove('shadow-lg'));
        });
    </script>
}
